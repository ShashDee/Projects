<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment"
        android:paddingTop="40sp"
        android:paddingStart="30sp"
        android:paddingEnd="30sp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/angus_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ANGUS"
                android:tag="0"
                android:onClick="loadCowEntries" />

            <Button
                android:id="@+id/hereford_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HEREFORD"
                android:tag="1"
                android:onClick="loadCowEntries" />


            <Button
                android:id="@+id/brahman_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BRAHMAN"
                android:tag="2"
                android:onClick="loadCowEntries" />

            <Button
                android:id="@+id/shorthorn_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHORTHORN"
                android:tag="3"
                android:onClick="loadCowEntries" />

            <Button
                android:id="@+id/brangus_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BRANGUS"
                android:tag="4"
                android:onClick="loadCowEntries" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>